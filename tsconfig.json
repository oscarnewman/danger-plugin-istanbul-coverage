{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "lib": ["es2017"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dangerfile.ts", "node_modules", "dist"]
}
